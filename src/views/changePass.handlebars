<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
/>

<main class="form-signin w-25 m-auto mt-5">
  <h1 class="h3 mb-3 fw-normal text-center">Cambio de contraseña</h1>
  <form action="/changePass" method="post">
    <div class="form-floating mt-4">
      <input
        type="email"
        class="form-control-plaintext rounded-4 border border-primary text-center py-0"
        id="email"
        name="email"
        value={{user.email}}
        readonly
      />
      <label for="email"></label>
    </div>

    <div class="form-floating my-3">
      <input
        type="password"
        class="form-control rounded-4"
        id="password"
        name="password"
        placeholder=""
      />
      <label for="password">Nueva contraseña</label>
    </div>
    <button class="btn btn-primary w-100 mt-2" type="submit">Cambiar contraseña</button>
  </form>
</main>