<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
/>

<main class="form-signin w-25 m-auto mt-5">
  <h1 class="h3 mb-3 fw-normal text-center">Inicio de sesion</h1>

  {{#if msg}}
    <div class="alert alert-{{alert}}" role="alert">
      {{msg}}
    </div>
  {{/if}}

  <form action="/login" method="post">
    <div class="form-floating mt-4">
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder=""
      />
      <label for="email">Email</label>
    </div>

    <div class="form-floating my-3">
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder=""
      />
      <label for="password">Contraseña</label>
    </div>
    <button class="btn btn-primary w-100 mt-2" type="submit">Iniciar sesion</button>
  </form>
  <a class="btn btn-primary w-100" href="/register">Registrarme</a>

  <a class="btn btn-dark w-100 my-3" href="/register-github">
    <i class="bi bi-github"></i>
    Log in with GitHub
  </a>

  <a class="btn btn-danger w-100" href="/recoverPass">Recuperar contraseña</a>
  <a class="btn btn-info w-100 my-2" href="/docs">Documentacion</a>
</main>